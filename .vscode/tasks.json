{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build OpenGL Project",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++20",
                "-I${workspaceFolder}/include",
                "-L/usr/lib/x86_64-linux-gnu",    // System-wide GLFW library path
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/include/glad/glad.o",
                "-lglfw",                         // Link GLFW
                "-lGL",                           // Link OpenGL
                "-ldl",                           // Link dynamic linking library
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
